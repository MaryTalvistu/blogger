<% provide(:title, "Authors") %> 

<div class="container">
    <div class="col-xs-12">
      <h1 class="header-text">Authors</h1><br />
    </div>
      <div class="row">
      <table  class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Username</th>
            <th>Email</th>
            <th colspan="2"></th>
          </tr>
        </thead>

        <tbody>
          <% @authors.each do |author| %>
            <tr>
              <td><%= author.username %></td>
              <td><%= author.email %></td>
              <td><p><% if logged_in? && (author.username == current_user.username) %><%= link_to "Edit", edit_author_path(author) %><% end %></p></td>
              <td><p><% if logged_in? && (author.username == current_user.username) %><%= link_to "Delete", author, method: :delete, data: { confirm: 'Are you sure?' }  %><% end %></p></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      </div>
  </div>
</div>

<% if @authors.count == 0 %>
<span id="authors-notfound"><%= "No authors found" %></span>
<% end %>
<br>


