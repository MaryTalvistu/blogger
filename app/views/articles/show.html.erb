<% provide(:title, @article.title) %> 

<div class="container">
  <div class="row">
    <div class="col-md-12 text-center">
      <h1 class="header-text">"<%= @article.title %>"</h1>
      <p>Created on <%= @article.created_at.strftime("%b %d %Y")%></p>
      <p><%= image_tag (@article.image), class: "post-image" if @article.image.attached? %></p>
      <h2 id="article-body"><%= @article.body %></h2>
      <br>
      <h4 id="tags">
        Tags:
        <% @article.tags.each do |tag| %>
          <%= link_to tag.name, tag_path(tag) %>,
        <% end %>
      </h4>
    </div>
    <div class="col-md-12 mx-auto">
      <div class="col-md-6 mx-auto">
        <%= render partial: 'comments/form' %>
      </div>
      <h4>Comments (<%= @article.comments.size %>)</h4>
      <hr>
      <%= render @article.comments %>
    </div>
  </div>
</div>